<%= form_with(model: response, local: true) do |form| %>
  <% if response.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(response.errors.count, "error") %> prohibited this response from being saved:</h2>

      <ul>
      <% response.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :cid %>
    <%= form.text_field :cid, :value => params[:questionnaire] %>
  </div>

  <div class="field" style="display:none;">
    <%= form.label :student_id %>
    <%= form.text_field :student_id, :value => params[:student_id] %>
  </div>

  <div class="field">
    <%= form.label :questionnaire_id %>
    <%= form.text_field :questionnaire_id, :value => params[:questionnaire] %>
  </div>

  <%= Questionnaire.find(params[:questionnaire]).questions.each do |question| %>
    <% if question.is_open %>
       <div class="field">
        <%= form.label :question, :value => question.description %>
        <%= form.text_field :question %>
      </div>
    <% else %>
      <div class="field">
        <%= form.label :question, :value => question.description %>
        <%= form.radio_button :question, '1' %>
        <%= label :question_1, '1' %>
        <%= form.radio_button :question, '2' %>
        <%= label :question_2, '2' %>
        <%= form.radio_button :question, '3' %>
        <%= label :question_3, '3' %>
        <%= form.radio_button :question, '4' %>
        <%= label :question_4, '4' %>
        <%= form.radio_button :question, '5' %>
        <%= label :question_5, '5' %>
      </div>
    <% end %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
